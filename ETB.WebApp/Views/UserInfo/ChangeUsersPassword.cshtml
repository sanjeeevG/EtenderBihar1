@using ETB.WebApp.Utilities
@model ETB.WebApp.Models.ChangeUsersPassViewModel
@{
    Layout = "~/Views/Shared/_LayoutWithLogin.cshtml";
}

<h2>@Subtitle.ChangeUserPass</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-action="ChangeUsersPassword" method="post">
                <h4>Change your local account existing password below</h4>
                <hr />
                <div class="row">
                    <div class="form-control bg-danger text-white ml-2 mr-2" asp-validation-summary="ModelOnly"></div>
                </div>
                <div class="form-group focus">
                    <input type="hidden" asp-for="UserIdEncr" class="form-control" />

                    <label asp-for="UserId"></label>
                    <input readonly="readonly" asp-for="UserId" class="form-control" />
                </div>
                <div class="form-group focus">
                    <label asp-for="FullName"></label>
                    <input readonly="readonly" asp-for="FullName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Pass"></label>
                    <input asp-for="Pass" type="password" class="form-control" />
                    <span asp-validation-for="Pass" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-12 text-center small">
                        <span class="d-flex justify-content-center" id="spnResult"></span>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save the Password</button>
                    <a asp-action="Index" asp-controller="UserInfo" class="form-control d-inline btn-link">Back to User List</a>
                </div>
            </form>
        </section>
    </div>
</div>